<%- include("partials/header.ejs") %>
  
<body>
  
  <h1>Updating Customer Data</h1>

    <form method="POST" action="/customer/edit">

      <input type="hidden" name="customerId" value="<%=customerInfo[0].customerId%>">

      First Name:
      <input type="text" name="firstName" maxlength="25" size="25" value="<%=customerInfo[0].firstName%>"><br>
      Last Name:
      <input type="text" name="lastName" maxlength="25" size="25" value="<%=customerInfo[0].lastName%>"><br>
      e-mail   :
      <input type="text" name="email" maxlength="50" size="25" value="<%=customerInfo[0].email%>"><br>
      phone number:
      <input type="text" name="phoneNumber" maxlength="12" size="12" value="<%=customerInfo[0].phoneNumber%>"><br>
      Military Discount:  
        <input type="radio" name="military" value="N" 
        
        <% if (customerInfo[0].military == "N") { %>
          checked 
        <% } %>
        
        > no

        <input type="radio" name="military" value="Y" 
        
        <% if (customerInfo[0].military == "Y") { %>
          checked 
        <% } %>
        
        > yes
<br>
 Zip (optional):
      <input type="text" name="zipCode" maxlength="5" size="5" value="<%=customerInfo[0].zip%>"><br>
      <button>Edit Customer</button>  


    </form>

    <br>
          <% if (typeof message != "undefined"){ %>
             <h3><%=message%></h3>
 <% } %>

     <%- include("partials/footer.ejs") %>

</body>
</html>
