<%- include("partials/header.ejs") %>
  
<body>
  <h1>Adding a new customer</h1>
 
    <form method="POST" action="/customer/new">
      First Name:
      <input type="text" name="firstName" maxlength="25" size="25"><br>
      Last Name:
      <input type="text" name="lastName" maxlength="25" size="25"><br>
      e-mail   :
      <input type="text" name="email" maxlength="50" size="25"><br>
      phone number:
      <input type="text" name="phoneNumber" maxlength="12" size="12"><br>
      Military Discount
<input type="radio" id="no" name="military" value="N" checked="checked">
<label for="no">no</label>
<input type="radio" id="yes" name="military" value="Y">
      <label for="yes">yes </label>
<br>
 Zip (optional):
      <input type="text" name="zipCode" maxlength="5" size="5"><br>
      <button>Add Customer</button>
    </form>

  
<% if (typeof message != "undefined"){ %>
             <h3><%=message%></h3>
 <% } %>

  <%- include("partials/footer.ejs") %>
   
</body>
</html>
